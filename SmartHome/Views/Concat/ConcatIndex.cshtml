<link href="~/css/concat.css" rel="stylesheet" />




<div class="contact_section1">
    <div class="contact_us">CONTACT US</div>
</div>

<div class="contact_section2">


    <div class="contact_section2_adres padding_5">
        <div class="contact_sec2_adres_icon icon_ortala"><i class="fa-solid fa-map contactsec2icons"></i></div>
        <div class="contact_sec2_adresphonesemails">ADDRESS</div>

        @if (Model != null)
        {
            foreach (var concat_veri in Model.concat_iletisim)
            {
                <div class="contact_sec2_adrestext contact_sec2_iletisim">
                    <p style="    font-weight: 300;
    font-style: normal;
    font-family: 'Roboto', sans-serif;
    color: #ffffff;
    font-size: 16px;
    line-height: 1.5;
    letter-spacing: 0px; text-align:center;">@concat_veri.Adres</p>
                    @*<p>Suite 721 New York,</p>*@
                    @*<p style="text-align:center ;">NY 10010</p>*@
                </div>
            }
        }
    </div>

    <div class="contact_section2_phones padding_5">
        <div class="contact_sec2_phones_icon icon_ortala"><i class="fa-solid fa-phone contactsec2icons"></i></div>
        <div class="contact_sec2_adresphonesemails">PHONES</div>
        @if (Model != null)
        {
            foreach (var concat_veri in Model.concat_iletisim)
            {
    <div class="contact_sec2_phonestext">

        @*<p class="contact_sec2_iletisim">
            Phone:
            <a class="contact_sec2_iletisim" href="">@concat_veri.Phone</a>
        </p>
        <p class="contact_sec2_iletisim">Cell:<a class="contact_sec2_iletisim" href="">@concat_veri.Phone</a></p>*@



        <p class="contact_sec2_iletisim">
              <a class="contact_sec2_iletisim" href="">@concat_veri.Phone</a>
        </p>
       


    </div>

            }
        }
    </div>
    <div class="contact_section2_emails padding_5">
        <div class="contact_sec2_emails_icon icon_ortala"><i class="fa-solid fa-envelope contactsec2icons"></i></div>
        <div class="contact_sec2_adresphonesemails">E-MAILS</div>

        @if (Model != null)
        {
            foreach (var concat_veri in Model.concat_iletisim)
            {
                <div class="contact_sec2_emailstext">
                    <p class="contact_sec2_iletisim">@concat_veri.Mail</p>
                    @*<p class="contact_sec2_iletisim">youremail@domain.com</p>*@

                </div>
            }
        }
    </div>

</div>

<div class="contact_section3">


    <div class="contact_sctn3_form">
        <div class="contact_sctn3_formtext">
            <div class="contact_sctn3_formbaslik"> Contact Form</div>
            <div class="contact_sctn3_formaciklama">Whatever types of questions you'll have, feel free to get in touch with us</div>
        </div>
        <div class="form2">
            <form action="/Concat/ConcatFormEkle" method="post">
                <div class="row">
                    <div class="col-75"> <input type="text" id="Ad" style="outline: none;" name="Ad" required="" placeholder="Your Name*"></div>
                </div>

                <div class="row">
                    <div class="col-75"><input type="text" id="Mail" style="outline: none;" name="Mail" required="" placeholder="Email*"></div>
                </div>
                <!-- outline:none  dış kenarlık rengi vermek icin,  focus -->
                <div class="row">
                    <div class="col-75 "><input type="text" id="Mesaj" style="outline: none;" name="Mesaj" required="" placeholder="Message*"></div>
                </div>
                <br>
                <div class="row">
                    <input type="submit" value="SEND">
                </div>
            </form>
        </div>


        <!-- </div> -->
    </div>

    <div class="contact_sctn3_resim"><img class="sctn3_resim2" src="/img/contactresimsec3.jpg"></div>
</div>


